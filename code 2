def lorenz(w,t,p,r,b): 
    x,y,z=w
    return np.array([p*(y-x),x*(r-z),x*y-b*z])

t =np.arange(0,50,0.01)

track1=odeint(lorenz, (0.0, 1.00, 0.000000001),t,args=(10.0,30.0,3.0))

track2=odeint(lorenz, (0.0, 1.00, 0.0),t,args=(10.0,30.0,3.0))

